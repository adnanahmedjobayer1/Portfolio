import React, { useState } from 'react';
import { Container, Row, Col, Image } from 'react-bootstrap';
import { Fade } from 'react-awesome-reveal';

import aboutImage from '../images/about-image.jpg'; // আপনার একটি ছবি assets ফোল্ডারে রাখুন

// বিভিন্ন সেকশনের ডেটা
const skillsData = [
  { name: 'JavaScript (ES6+)', level: '95%' },
  { name: 'React', level: '90%' },
  { name: 'Node.js', level: '85%' },
  { name: 'MongoDB', level: '80%' },
  { name: 'CSS3 & Sass', level: '95%' },
  { name: 'Bootstrap', level: '100%' },
];

const experienceData = [
  {
    year: '২০২২ - বর্তমান',
    role: 'সিনিয়র ওয়েব ডেভেলপার',
    company: 'টেক সলিউশনস লিমিটেড',
    desc: 'লিড ডেভেলপার হিসেবে একটি দলের নেতৃত্ব দেওয়া এবং রিঅ্যাক্ট-ভিত্তিক বড় আকারের অ্যাপ্লিকেশন তৈরি করা।'
  },
  {
    year: '২০২০ - ২০২২',
    role: 'জুনিয়র ওয়েব ডেভেলপার',
    company: 'ওয়েব ক্রাফটার্স',
    desc: 'ওয়ার্ডপ্রেস এবং কাস্টম পিএইচপি প্রজেক্টে কাজ করা এবং ক্লায়েন্টদের জন্য ওয়েবসাইট রক্ষণাবেক্ষণ করা।'
  }
];

const educationData = [
  {
    year: '২০১৬ - ২০২০',
    degree: 'কম্পিউটার সায়েন্স অ্যান্ড ইঞ্জিনিয়ারিং-এ বি.এস.সি',
    institution: 'আপনার বিশ্ববিদ্যালয়ের নাম',
    desc: 'এখানে আপনার একাডেমিক অর্জন বা থিসিস সম্পর্কে সংক্ষেপে লিখতে পারেন।'
  },
  {
    year: '২০১৪ - ২০১৬',
    degree: 'উচ্চ মাধ্যমিক সার্টিফিকেট (HSC)',
    institution: 'আপনার কলেজের নাম',
    desc: 'বিজ্ঞান বিভাগ থেকে জিপিএ ৫.০০ অর্জন।'
  }
];


function About() {
  const [activeTab, setActiveTab] = useState('skills');

  const renderContent = () => {
    switch (activeTab) {
      case 'skills':
        return (
          <div className="skills-container">
            {skillsData.map((skill, index) => (
              <div className="skill-item" key={index}>
                <div className="skill-info">
                  <span>{skill.name}</span>
                  <span>{skill.level}</span>
                </div>
                <div className="progress">
                  <div className="progress-bar" style={{ width: skill.level }}></div>
                </div>
              </div>
            ))}
          </div>
        );
      case 'experience':
        return (
          <ul className="timeline">
            {experienceData.map((exp, index) => (
              <li key={index}>
                <span className="timeline-year">{exp.year}</span>
                <h5 className="timeline-role">{exp.role} - <span className="timeline-company">{exp.company}</span></h5>
                <p>{exp.desc}</p>
              </li>
            ))}
          </ul>
        );
      case 'education':
        return (
          <ul className="timeline">
            {educationData.map((edu, index) => (
              <li key={index}>
                <span className="timeline-year">{edu.year}</span>
                <h5 className="timeline-role">{edu.degree}</h5>
                <p className="timeline-institution">{edu.institution}</p>
                <p>{edu.desc}</p>
              </li>
            ))}
          </ul>
        );
      default:
        return null;
    }
  };

  return (
    <section id="about" className="about-section">
      <Container>
        <Fade direction="up" triggerOnce>
          <h2 className="section-title text-center mb-5">আমার সম্পর্কে</h2>
        </Fade>
        <Row className="align-items-center">
          <Col lg={5} className="text-center mb-4 mb-lg-0">
            <Fade direction="left" triggerOnce>
              <Image src={aboutImage} alt="আপনার ছবি" className="about-image" />
            </Fade>
          </Col>
          <Col lg={7}>
            <Fade direction="right" triggerOnce>
              <p className="about-description">
                আমি একজন প্যাশনেট ওয়েব ডেভেলপার, যার আধুনিক এবং কার্যকর ওয়েব অ্যাপ্লিকেশন তৈরিতে গভীর আগ্রহ রয়েছে। আমি ব্যবহারকারীর জন্য সহজ এবং সুন্দর ডিজিটাল অভিজ্ঞতা তৈরি করতে ভালোবাসি। নতুন টেকনোলজি শিখতে এবং চ্যালেঞ্জিং প্রজেক্টে কাজ করতে আমি সর্বদা প্রস্তুত।
              </p>
              <div className="tab-buttons">
                <button className={`tab-link ${activeTab === 'skills' ? 'active' : ''}`} onClick={() => setActiveTab('skills')}>দক্ষতা</button>
                <button className={`tab-link ${activeTab === 'experience' ? 'active' : ''}`} onClick={() => setActiveTab('experience')}>অভিজ্ঞতা</button>
                <button className={`tab-link ${activeTab === 'education' ? 'active' : ''}`} onClick={() => setActiveTab('education')}>শিক্ষা</button>
              </div>
              <div className="tab-content">
                {renderContent()}
              </div>
            </Fade>
          </Col>
        </Row>
      </Container>
    </section>
  );
}

export default About;